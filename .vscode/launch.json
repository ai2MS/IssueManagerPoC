{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "envFile":"${workspaceFolder}/.env",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "program": "${file}",
            "args": [
                //"-v"
            ],
            "console": "integratedTerminal",
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "justMyCode": true,
            "subProcess": false
        },
        {
            "name": "Python Debugger: Module",
            "envFile":"${workspaceFolder}/.env",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "type": "debugpy",
            "request": "launch",
            "module": "issue_evaluator.embedded_dev_team",
            //"args": "${command:pickArgs}",
            "console": "integratedTerminal",
            "subProcess": false
        },
        {
            "name": "Python Debugger: Arbitary Module",
            "envFile":"${workspaceFolder}/.env",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "args": [
                // Args for the __main__ module are sub module name (relative, so start with a .) 
                // and then the function or method to call
                // followed by arguments to the function call
                ".embedded_dev_team.fastapi_app",
                "main"
            ],
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "issue_evaluator",
            "console": "integratedTerminal",
            "subProcess": false
        }
    ]
}